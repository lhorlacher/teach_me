<% if @lesson.errors.any? %>
	<% @lesson.errors.full_messages.each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<%= form_for @lesson do |f| %>
<div class='input-field'>
<%= f.date_field :lesson_date, class: 'datepicker validate', id: 'date' %>
<%= f.label :lesson_date, for: 'date', class: 'datepicker' %>
</div>
<div class='input-field'>
<%= f.label :feedback %>
<%= f.text_area :feedback, class: 'validate materialize-textarea' %>
</div>
<div class='input-field'>
<%= f.label :notes %>
<%= f.text_area :notes, class: 'validate materialize-textarea' %>
</div>
<%= f.submit %>

<% end %>