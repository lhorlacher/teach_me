<% if @lesson.errors.any? %>
	<% @lesson.errors.full_messages.each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<%= form_for @lesson do |f| %>

<%= f. label :lesson_date %>
<%= f.date_field :lesson_date %>
<br>
<%= f.label :feedback %>
<%= f.text_area :feedback %>
<br>
<%= f.label :notes %>
<%= f.text_area :notes %>
<br>
<%= f.submit %>

<% end %>