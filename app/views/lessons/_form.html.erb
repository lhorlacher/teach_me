<% if @lesson.errors.any? %>
	<% @lesson.errors.full_messages.each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<%= form_for @lesson do |f| %>
<div class='input-field'>
<%= f.date_field :lesson_date, id: 'date', class: 'datepicker' %>
<%= f.label :lesson_date, for: 'date', class: 'active' %>
</div>
<div class='input-field'>
<%= f.text_area :feedback, id: 'feedback', class: 'materialize-textarea' %>
<%= f.label :feedback, for: 'feedback' %>
</div>
<div class='input-field'>
<%= f.text_area :notes, id: 'notes', class: 'materialize-textarea' %>
<%= f.label :notes, for: 'notes'%>
</div>
<%= f.submit 'Submit', class: 'btn' %>

<% end %>