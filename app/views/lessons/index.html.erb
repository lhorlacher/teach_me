<h1>Lessons for <%= @student.first_name %> </h1>

<% @lessons.each do |lesson| %>

	<div class='card'><strong><%= lesson.lesson_date %></strong>
	
		<p>Notes: <%= lesson.notes %></p>

		<p>Feedback: <%= lesson.feedback %></p>
	</div>

	<% if current_user.teacher? %>
		<%= link_to 'Edit Lesson', edit_lesson_path(lesson), class: 'btn'%>
		<%= link_to 'Assignments', assignments_path(lesson), class: 'btn'%>
	<% end %>
	<hr>
	<% if current_user.student? %>
		<%= link_to 'Assignements', assignments_path(lesson) %>
	<% end %>
<br>
<% end %>
<% if current_user.teacher? %>
	<%= link_to 'Create Lesson', new_lesson_path(@student), class: 'btn' %>
<% end %>

<% if current_user.teacher? %>
	<%= link_to 'Students', student_index_path(current_user), class: 'btn' %>
<% end %>

<hr>



